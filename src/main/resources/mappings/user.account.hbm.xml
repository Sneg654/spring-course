<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.beans.models">

    <class name="UserAccount" table="USER_ACCOUNT">
        <id name="id" column="ID">
            <generator class="identity"/>
        </id>
        <many-to-one name="user" class="com.epam.beans.models.User" column="USER" fetch="join" lazy="false"/>
        <property name="prepaidUserMoney" column="USER_MONEY" type="double"/>
    </class>

</hibernate-mapping>