        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.beans.models">

    <class name="PersistentLogin" table="PERSISTENT_LOGINS">
        <id name="series" column="series" type="java.lang.String"/>
        <property name="login" column="LOGIN" type="java.lang.String" unique="true" not-null="true"/>
        <property name="token" column="TOKEN" type="java.lang.String" unique="true" not-null="true"/>
        <property name="last_used" type="java.util.Date" column="DATE_TIME"/>
    </class>

</hibernate-mapping>